
<form id="allergy_form" class="floating_window" method="post" action="" onsubmit="return false">
    <div class="floating_window_gradient">
        <img class="close_button dismiss_floating" src="jmvc/allergies/resources/close.png" alt="x" />
        
        <% if (!this.item) { item = {}; meta = {}; } %>
        
        <p id="allergy_form_name" class="bigger">
            Allergen
            <input class="full" type="text" name="allergen_name" value="<%= item.name %>" />
            <input type="hidden" name="allergen_name_code" value="" />
            <span class="code_info">SNOMED-CT code: ###</span>
        </p>
        <p>Type<input class="full" type="text" name="allergen_type" value="<%= item.type %>" /></p>
        
        <p>Reaction<input class="full" type="text" name="reaction" value="<%= item.reaction %>" /></p>
        <p>Description<textarea class="full" name="specifics"><%= item.specifics %></textarea></p>
        
        <p style="float: right; width: 76%; text-align: right;">
            Diagnosed by 
            <input class="short" type="text" name="diagnosed_by" value="<%= item.diagnosedBy %>" /> on 
            <input class="short" type="text" name="date_diagnosed" value="<%= item.dateDiagnosed %>" />
        </p>
        
        <div class="bottom_buttons">
            <input class="dismiss_floating" type="reset" value="Cancel" <%= this %> />
            <input type="submit" value="<% if (this) { %>Save<% } else { %>Report<% } %>" />
            <input type="hidden" name="id" value="<% if (meta.id) { %><%= meta.id %><% } %>" />
        </div>
    </div>
</form>
